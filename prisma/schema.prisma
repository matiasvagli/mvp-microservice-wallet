generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"


}
model Wallet {
  id             String   @id @db.Uuid
  ownerId        String   @db.Uuid
  type           String   // Aquí guardaremos "STANDARD" o "TEEN"
  balanceAmount  Decimal  @db.Decimal(20, 2) 
  currency       String
  parentWalletId String?  @db.Uuid
  whiteList      String[] 
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("wallets") // Esto hace que en la DB la tabla se llame "wallets" en minúscula
}